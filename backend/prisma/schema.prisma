generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Menu {
  id          String      @id @default(uuid())
  name        String
  parentId    String?
  parent      Menu?       @relation("Submenu", fields: [parentId], references: [id], onDelete: Cascade)
  subMenus    Menu[]      @relation("Submenu")
  depth       Int
  createdAt   DateTime    @default(now())
}
